<h1>New Question</h1>

<%= form_for :question, url: questions_path do |f| %>
<% if @question.errors.any? %>
<div id="errors">
  <h2><%= pluralize(@question.errors.count, "error") %></h2>

  <ul>
    <% @question.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>
<p>
  <%= f.label :title %><br>
  <%= f.text_field :title %><br>
</p>
<p>
  <%= f.label :text %><br>
  <%= f.text_area :text %>
</p>
<p>
  <%= f.submit %>
</p>

<% end %>
