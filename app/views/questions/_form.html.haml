= form_for @question, :class => 'form-horizontal' do |f|
  - if @question.errors.any?
    #errors
      %h4= pluralize @question.errors.count, "error"
      %ul
        = list_of @question.errors.full_messages do |msg|
          = msg

  .form-group
    %p= f.text_field :title, :class => 'form-control', :placeholder => 'Title'

  .form-group
    = f.cktext_area :text, :ckeditor => {:toolbar => 'mini'}

  .form-group
    %p= label_tag 'Tags'
    %p= f.text_field :tag_string, :class => 'form-control'

  %p= f.submit 'Submit'
