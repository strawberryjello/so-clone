= form_for @question do |f|
  - if @question.errors.any?
    #errors
      %h2= pluralize @question.errors.count, "error"
      %ul
        - @question.errors.full_messages.each do |msg|
          %li= msg

  %p= f.label :title
  %p= f.text_field :title

  %p= f.label :text
  %p= f.text_area :text

  %p= label_tag 'Tags'
  %p= f.text_field :tag_string

  %p= f.submit

