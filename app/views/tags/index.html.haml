%h1 Tags

%hr

.container
  = form_tag 'tags/search', :method => 'get', :class => 'form-inline'  do
    .form-group
      = label_tag 'Find tags'
      = search_field_tag :search_string

    = submit_tag 'Search'

%hr

.container
  - @tags.each do |t|
    = link_to t.name, tag_path(t), :class => 'btn btn-default'
